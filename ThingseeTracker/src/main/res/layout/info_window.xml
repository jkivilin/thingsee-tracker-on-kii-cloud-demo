<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="5dp">
    <TextView
        android:id="@+id/tracker_marker_popup_update_timestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"
        android:text="@string/tracker_timestamp"
        android:textSize="@dimen/marker_popup_timestamp_font_size"
        android:textColor="@color/black_effect"/>
    <TextView
        android:id="@+id/tracker_marker_popup_accuracy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"
        android:text="@string/tracker_accuracy"
        android:textSize="@dimen/marker_popup_timestamp_font_size"
        android:textColor="@color/black_effect"/>
</LinearLayout>