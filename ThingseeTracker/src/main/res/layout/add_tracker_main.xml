<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginRight="150dp"
    android:layout_marginLeft="150dp">
    <LinearLayout
        android:id="@+id/login_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp"
        android:background="@drawable/round_dialog"
        android:focusable="true"
        android:focusableInTouchMode="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp">
                    <ImageView
                        android:id="@+id/tracker_icon"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/tracker_default"
                        android:scaleType="fitXY"
                        android:contentDescription="@string/desc"/>
                    <EditText
                        android:id="@+id/display_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/tracker_icon"
                        android:layout_marginLeft="20dp"
                        android:padding="5dp"
                        android:layout_centerVertical="true"
                        android:inputType="textVisiblePassword|textNoSuggestions|textCapSentences"
                        android:singleLine="true"
                        android:maxLength="50"
                        android:scrollbars="horizontal"
                        android:scrollHorizontally="true"
                        android:hint="@string/display_name_hint"
                        android:textColorHint="@drawable/editor_hint_selector"
                        android:textColor="@color/white_effect"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:background="@drawable/rounded_edittext">
                    </EditText>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp">
                    <EditText
                        android:id="@+id/vendor_thing_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:padding="5dp"
                        android:inputType="textVisiblePassword|textNoSuggestions"
                        android:singleLine="true"
                        android:maxLength="50"
                        android:scrollbars="horizontal"
                        android:scrollHorizontally="true"
                        android:hint="@string/tracker_vendor_thing_id_hint"
                        android:textColorHint="@drawable/editor_hint_selector"
                        android:textColor="@color/white_effect"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:background="@drawable/rounded_edittext">
                    </EditText>
                    <EditText
                        android:id="@+id/serial_nbr"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_below="@+id/vendor_thing_id"
                        android:padding="5dp"
                        android:inputType="textVisiblePassword|textNoSuggestions"
                        android:singleLine="true"
                        android:maxLength="50"
                        android:scrollbars="horizontal"
                        android:scrollHorizontally="true"
                        android:hint="@string/tracker_serial_nbr_hint"
                        android:textColorHint="@drawable/editor_hint_selector"
                        android:textColor="@color/white_effect"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:background="@drawable/rounded_edittext">
                    </EditText>
                </RelativeLayout>
                <com.thingsee.tracker.views.ClearTextView
                    android:id="@+id/register"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="60dp"
                    android:clickable="true"
                    android:onClick="onClickRegister"
                    android:text="@string/button_register"
                    android:gravity="center"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/button_shape"/>
                </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</ScrollView>